{
  "name": "subcli",
  "version": "0.1.0",
  "description": "A Substrate CLI util based on @polkadot/api",
  "license": "Apache-2.0",
  "author": "Akagi201 <akagi201@gmail.com>",
  "type": "module",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "clean": "rimraf coverage build tmp",
    "dev": "ts-node-esm src/index.ts",
    "lint": "eslint . --ext .ts",
    "sort-package": "sort-package-json",
    "start": "node --experimental-specifier-resolution=node build/src/index.js",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@polkadot/api": "^9.2.1",
    "@polkadot/keyring": "^10.1.4",
    "@polkadot/util": "^10.1.4",
    "@polkadot/util-crypto": "^10.1.4",
    "@substrate/txwrapper-polkadot": "^3.1.6",
    "@substrate/txwrapper-registry": "^3.1.7",
    "bn.js": "^5.2.1",
    "dayjs": "^1.11.5",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@polkadot/api-augment": "^9.2.1",
    "@polkadot/rpc-augment": "^9.2.1",
    "@polkadot/types-codec": "^9.2.1",
    "@polkadot/types-create": "^9.7.1",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.7.3",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.8.2",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.57.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsutils": "^3.21.0",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">= 16.16 <17"
  },
  "volta": {
    "node": "16.16.0"
  }
}
